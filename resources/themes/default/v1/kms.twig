{% extends "v1.layouts.app" %}

{% block content %}	
<aside id="colorlib-hero" style="min-height: 104px !important;">
			<div class="flexslider">
				<ul class="slides">
			   	<li style="background-image: url(images/img_bg_2.jpg);">
			   		<div class="overlay"></div>
			   		<div class="container-fluid">
			   			<div class="row">
				   			<div class="col-md-6 col-sm-12 col-md-offset-3 slider-text">
				   				<div class="slider-text-inner text-center">
				   					<h1>Blog</h1>
				   					<h2><span><a href="index.html">Home</a> | Blog</span></h2>
				   				</div>
				   			</div>
				   		</div>
			   		</div>
			   	</li>
			  	</ul>
		  	</div>
		</aside>
		
		<div class="colorlib-blog">
			<div class="container">
				<div class="row">
				{% for post in kms['data'] %}
					<div class="col-md-4 animate-box">
						<article class="article-entry">
							<a href="kms/{{ post['title'] }}" class="blog-img" style="background-image: url({{ post['thumbnail_url'] }});">
							</a>
							<div class="desc">
								<h2><a href="kms/{{ post['title'] }}">{{ post['title'] }}</a></h2>
								<p>{{ post['content']|striptags|slice(0, 50) ~ '...' }}</p>
							</div>
						</article>
					</div>
				{% endfor %}
				</div>
			</div>
			{{ kms.links|raw }}
		</div>

{% endblock %}