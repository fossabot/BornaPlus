{% extends "v1.layouts.app" %}

{% block content %}	
<aside id="colorlib-hero" style="min-height: 104px !important;">
			<div class="flexslider">
				<ul class="slides">
			   	<li style="background-image: url(images/img_bg_2.jpg);">
			   		<div class="overlay"></div>
			   		<div class="container-fluid">
			   			<div class="row">
				   			<div class="col-md-6 col-sm-12 col-md-offset-3 slider-text">
				   				<div class="slider-text-inner text-center">
				   					<h1>Blog</h1>
				   					<h2><span><a href="index.html">Home</a> | Blog</span></h2>
				   				</div>
				   			</div>
				   		</div>
			   		</div>
			   	</li>
			  	</ul>
		  	</div>
		</aside>



		<div id="colorlib-contact">
			<div class="container">
				<div class="row">
						    {% if alert == 'ok' %}
<div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>با تشکر از شما پیام شما ثبت شد</strong>
    </div>
    {% endif %}
					<div class="col-md-10 col-md-offset-1 animate-box">
					<div id="contact-info">
						<h2>اطلاعات تماس</h2>
						<div class="row">
							<div class="col-md-12">
								<div class="contact-info-wrap-flex">
									<div class="con-info">
										<p><span><i class="icon-location-2"></i></span>{{ contact[0]['address'] }}</p>
									</div>
									<div class="con-info">
										<p><span><i class="icon-phone3"></i></span> <a href="tel://{{ contact[0]['phone'] }}">{{ contact[0]['phone'] }}</a></p>
									</div>
									<div class="con-info">
										<p><span><i class="icon-paperplane"></i></span> <a href="mailto:{{ contact[0]['email'] }}">{{ contact[0]['email'] }}</a></p>
									</div>
									<div class="con-info">
										<p><span><i class="icon-globe"></i></span> <a href="http://bornaplus.com">bornaplus.com</a></p>
									</div>
								</div>
							</div>
						</div>
						</div>
					</div>
					<div class="col-md-10 col-md-offset-1 animate-box">
						<div id="contact">
						<h2>به ما پیام بدهید</h2>
						<form action="{{ route('v1.storeContact') }}" method="POST">
						<input type="hidden" name="_token" value="{{ csrf_token() }}">

							<div class="row form-group">
								<div class="col-md-6">
									<!-- <label for="fname">First Name</label> -->
									<input type="text" name="name" class="form-control" required placeholder="نام شما">
								</div>
								<div class="col-md-6">
									<!-- <label for="lname">Last Name</label> -->
									<input type="tel" name="phone" class="form-control" placeholder="شماره تماس شما">
								</div>
							</div>

							<div class="row form-group">
								<div class="col-md-12">
									<!-- <label for="email">Email</label> -->
									<input type="email" name="email" class="form-control" placeholder="ایمیل شما">
								</div>
							</div>

							<div class="row form-group">
								<div class="col-md-12">
									<!-- <label for="subject">Subject</label> -->
									<input type="text" name="title" class="form-control" placeholder="عنوان پیام شما">
								</div>
							</div>

							<div class="row form-group">
								<div class="col-md-12">
									<!-- <label for="message">Message</label> -->
									<textarea name="description" name="message" cols="30" rows="10" class="form-control" placeholder="پیام شما"></textarea>
								</div>
							</div>
							<div class="form-group">
								<input type="submit" value="ارسال" class="btn btn-primary">
							</div>
						</form>	
						</div>	
					</div>
				</div>
			</div>
		</div>
		<!--<div id="map" class="colorlib-map"></div>-->
		



{% endblock %}