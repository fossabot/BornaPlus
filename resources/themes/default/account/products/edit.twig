{% extends "account.blog" %}


{% block user_area %}




<form action="{{ route('account.updateProduct',product['id']) }}" method="post">

<input type="hidden" name="_token" value="{{ csrf_token() }}">


<div class="form-row">

    <div class="form-group col-md-6">
        
        <input placeholder="name" type="text" name="name" class="form-control" value="{{ product['name'] }}">

    </div>

    <select id="category_id" name="category_id">

                  {% for cat in categories %}
  {% if cat['id']==product['category_id'] %}
         <option selected="selected" value="{{ cat['id'] }}">{{ cat['name'] }}</option>
    
    {% else %}
         <option value="{{ cat['id'] }}">{{ cat['name'] }}</option>
    {% endif %}

  

                

             {% endfor %}
</select>



</div>



<a href="{{ route('account.getProduct') }}" class="btn btn-secondary">Back</a>
        <input class="btn btn-primary" type="submit" value="Save">
       
        
    </form>
{% endblock %}