{% extends "account.blog" %}


{% block user_area %}


    {{ form_open({'route' :'account.storeProduct', 'method' :'POST'}) }}





<div class="form-row">

    <div class="form-group col-md-6">
        
        <input placeholder="name" type="text" name="name" class="form-control" value="">

    </div>

    <select id="category_id" name="category_id">

                  {% for cat in categories %}

         <option value="{{ cat['id'] }}">{{ cat['name'] }}</option>

  

                

             {% endfor %}
</select>



</div>



<a href="{{ route('account.getProduct') }}" class="btn btn-secondary">Back</a>
        <input class="btn btn-primary" type="submit" value="Save">
       
        
    {{ form_close() }}
{% endblock %}