{% extends "v1.layouts.app" %}

{% block content %}



<aside id="colorlib-hero" style="min-height: 104px !important;">
            <div class="flexslider">
                <ul class="slides">
                <li style="background-image: url(images/img_bg_2.jpg);">
                    <div class="overlay"></div>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-sm-12 col-md-offset-3 slider-text">
                                <div class="slider-text-inner text-center">
                                    <h1>Blog</h1>
                                    <h2><span><a href="index.html">Home</a> | Blog</span></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                </ul>
            </div>
        </aside>



        <div id="colorlib-contact">
            <div class="container">




 <div class="col-sm-9">

               {{ form_model(user, {'url' :  route('account.edit_profile.store'), 'files': true, 'id':'edit_profile', 'class' : 'form-vertical mb-5'}) }}

            {% include 'notifications' %}

            <div class="form-group row">
                <label for="example-text-input" class="col-4 col-sm-3 col-form-label">نام کامل</label>
                <div class="col-12 col-sm-9">
                    {{ form_text('display_name', null, {'class' : 'form-control'}) }}
                </div>
            </div>

            <div class="form-group row">
                <label for="example-tel-input" class="col-4 col-sm-3 col-form-label">نام کاربری</label>
                <div class="col-12 col-sm-9">
                    {{ form_text('username', null, {'class' : 'form-control'}) }}
                    <small id="passwordHelpBlock" class="form-text text-muted">
                        {{ __("نام کاربری شما ابزاری برای شنایی شما توسط دیگران است") }}
                    </small>
                </div>
            </div>

            <div class="form-group row">
                <label for="example-email-input" class="col-3 col-md-3 col-form-label">توضیحات درباره خودتان</label>
                <div class="col-12 col-sm-9">
                    {{ form_textarea('bio', null, {'class' : 'form-control', 'rows' : 3}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">عکس پروفایل</label>
                <div class="col-sm-8">
                    <img style="width: 100px" class="rounded-circle" src="{{ user.avatar }}?t={{ date().timestamp }}"/>
                    <br/><br/>{{ form_file('image') }}<br/>
                </div>
            </div>


            <div class="form-group row mt-5 mb-0">
                <label class="col-sm-3 col-form-label"></label>
                
            </div>
            <div class="form-group row">
                <label for="example-text-input" class="col-3 col-md-3 col-form-label">ایمیل</label>
                <div class="col-12 col-sm-9">
                    {{ form_text('email', user.email, {'class' : 'form-control', 'disabled' : true}) }}
                </div>
            </div>

            <div class="form-group row">
                <label for="example-email-input" class="col-3 col-md-3 col-form-label">شماره تلفن</label>
                <div class="col-12 col-sm-9">

                    <div class="input-group">

                        {{ form_text('phone', null, {'class' : 'form-control  border-right-0', 'placeholder':"+44"}) }}

                        <div class="input-group-prepend ">
                            <span class="input-group-text bg-white  border-left-0 " id="basic-addon1"><i class="mdi mdi-phone"></i></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">جنسیت</label>
                <div class="col-sm-8">
                    {{ form_select('gender', {'M' : 'مرد', 'F' : 'زن', '' : 'مشخص نیست'}, null, {'class' : 'form-control'}) }}
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">&nbsp;</label>
                <div class="col-sm-8">
                    {{ form_submit(__('ذخیره'), {'class' : 'btn btn-primary'}) }}

                </div>
            </div>


            {{ form_close() }}


        </div>
                    



 <div class="col-sm-3">


<ul class="list-group list-group-flush">
                        <li class="list-group-item {{ active(['account.edit_profile.index'], 'list-group-item-primary') }}">
                            <a href="{{ route('account.edit_profile.index') }}" class="active">{{ __('ویرایش پروفایل') }}</a></li>

                    </ul>
          
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item {{ active(['account.listings.index'], 'list-group-item-primary') }}"><a href="{{ route('account.listings.index') }}">{{ __('شرکت های شما') }}</a></li>


                    </ul>

 </div>
       




            </div>
        </div>
        <!--<div id="map" class="colorlib-map"></div>-->
        









{% endblock %}