{% extends "account.blog" %}


{% block user_area %}
    <div class="card">
        <h6 class="card-header bg-white"><i class="mdi mdi-account mr-2"></i> Product Price</h6>
        <a href="{{ route('account.addProductPrice') }}" class="btn btn-primary btn-sm align-self-center">
        <i class="fa fa-plus-square" aria-hidden="true"></i> Add
      </a>
       <table class="table table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>content</th>
            <th>posted_at</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        
            <tr>
                <td>{{ product['product']['name'] }}</td>
                <td>{{ product['posted_at'] }}</td>
                <td>
                    <a href="editproductprice/{{ product['id'] }}" class="btn btn-primary btn-sm">
                        <i class="mdi mdi-pencil mr-2"></i>
                    </a>
                    <a href="destroyproductprice/{{ product['id'] }}" class="btn btn-primary btn-sm">
                        <i class="mdi mdi-delete mr-2" aria-hidden="true"></i>
                    </a>

                   
                </td>
            </tr>
        {% endfor %}
    </tbody>
    {{ news.links|raw }}

</table>




        
        
           


    </div>
{% endblock %}



