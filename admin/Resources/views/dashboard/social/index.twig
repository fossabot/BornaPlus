
{% extends "panel::layouts.dashboard" %}


{% block content %}

    <div class="card">
        <h6 class="card-header bg-white"><i class="mdi mdi-account mr-2"></i> شبکه های اجتماعی</h6>
        <a href="{{ route('panel.addSocial') }}" class="btn btn-primary btn-sm align-self-center">
        <i class="fa fa-plus-square" aria-hidden="true"></i> جدید
      </a>
       <table class="table table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>تلگرام</th>
            <th>اینستاگرام</th>
            <th>لینکداین</th>
            <th>آپارات</th>
            <th>تاریخ درج</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for cat in social %}
            <tr>
                <td>{{ cat['telegram'] }}</td>
                <td>{{ cat['instagram'] }}</td>
                <td>{{ cat['linkedin'] }}</td>
                <td>{{ cat['aparat'] }}</td>
                <td>{{ cat['created_at'] }}</td>
                <td>
                    <a href="editsocial/{{ cat['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="destroysocial/{{ cat['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>

                   
                </td>
            </tr>
        {% endfor %}
    </tbody>
    {{ social.links|raw }}

</table>




        
        
           


    </div>
{% endblock %}



