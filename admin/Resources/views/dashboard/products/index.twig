
{% extends "panel::layouts.dashboard" %}


{% block content %}
    <div class="card">
        <h6 class="card-header bg-white"><i class="mdi mdi-account mr-2"></i> محصولات</h6>
        <a href="{{ route('panel.addProduct') }}" class="btn btn-primary btn-sm align-self-center">
        <i class="fa fa-plus-square" aria-hidden="true"></i> محصول جدید
      </a>
       <table class="table table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>نام</th>
            <th>تاریخ درج</th>
            <th>دسته بندی</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for product in products['data'] %}
            <tr>
                <td>{{ product['name'] }}</td>
                <td>{{ product['posted_at'] }}</td>
                <td>{{ product['category']['name'] }}</td>
                <td>
                    <a href="editproduct/{{ product['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="destroyproduct/{{ product['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>


                   
                </td>
            </tr>
        {% endfor %}
    </tbody>
    {{ products['data'].links|raw }}

</table>




        
        
           


    </div>
{% endblock %}



