
{% extends "panel::layouts.dashboard" %}


{% block content %}

   
        <div class="card">
        <h6 class="card-header bg-white"><i class="mdi mdi-account mr-2"></i> درباره ما</h6>
        <a href="{{ route('panel.addAbout') }}" class="btn btn-primary btn-sm align-self-center">
        <i class="fa fa-plus-square" aria-hidden="true"></i> جدید
      </a>
       <table class="table table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>عنوان</th>
            <th>توضیحات</th>
        </tr>
    </thead>
    <tbody>
        {% for post in about['data'] %}
            <tr>
                <td>{{ post['title'] }}</td>
                <td>{{ post['description']|striptags }}</td>

                <td>
                    <a href="editabout/{{ str_slug(post['id'],"-") }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="destroyabout/{{ str_slug(post['id'],"-") }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>

                   
                </td>
            </tr>
        {% endfor %}
    </tbody>

</table>




        
        
           


    </div>
          

{% endblock %}
