
{% extends "panel::layouts.dashboard" %}


{% block content %}

    <div class="card">
        <h6 class="card-header bg-white"><i class="mdi mdi-account mr-2"></i> تماس ها</h6>
        <a href="{{ route('panel.addAccess') }}" class="btn btn-primary btn-sm align-self-center">
        <i class="fa fa-plus-square" aria-hidden="true"></i> جدید
      </a>
       <table class="table table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>شماره تلفن</th>
            <th>ایمیل</th>
            <th>آدرس</th>
            <th>تاریخ درج</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for cat in access %}
            <tr>
                <td>{{ cat['phone'] }}</td>
                <td>{{ cat['email'] }}</td>
                <td>{{ cat['address'] }}</td>
                <td>{{ cat['created_at'] }}</td>
                <td>
                    <a href="editaccess/{{ cat['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="destroyaccess/{{ cat['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>

                   
                </td>
            </tr>
        {% endfor %}
    </tbody>
    {{ access.links|raw }}

</table>




        
        
           


    </div>
{% endblock %}



