
{% extends "panel::layouts.dashboard" %}


{% block content %}

    <div class="card">
        <h6 class="card-header bg-white"><i class="mdi mdi-account mr-2"></i> دسته بندی ها</h6>
        <a href="{{ route('panel.addKMSCategory') }}" class="btn btn-primary btn-sm align-self-center">
        <i class="fa fa-plus-square" aria-hidden="true"></i> دسته بندی جدید
      </a>
       <table class="table table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>عنوان</th>
            <th>تاریخ درج</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for cat in categories %}
            <tr>
                <td>{{ cat['content'] }}</td>
                <td>{{ cat['posted_at'] }}</td>
                <td>
                    <a href="editkmscategory/{{ cat['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="destroykmscategory/{{ cat['id'] }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>

                   
                </td>
            </tr>
        {% endfor %}
    </tbody>
    {{ categories.links|raw }}

</table>




        
        
           


    </div>
{% endblock %}



