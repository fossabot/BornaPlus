
{% extends "panel::layouts.dashboard" %}


{% block content %}

   
        <div class="card">
        <h6 class="card-header bg-white"><i class="mdi mdi-account mr-2"></i> اخبار</h6>
        <a href="{{ route('account.addNews') }}" class="btn btn-primary btn-sm align-self-center">
        <i class="fa fa-plus-square" aria-hidden="true"></i> خبر جدید
      </a>
       <table class="table table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>عنوان</th>
            <th>کاربر</th>
            <th>تاریخ</th>
            <th><i class="fa fa-comment"></i></th>
            <th><i class="fa fa-star"></i></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for post in news %}
            <tr>
                <td>{{ post['title'] }}</td>
                <td>{{ post['author']['name'] }}</td>
                <td>{{ post['posted_at'] }}</td>
                <td><span class="badge badge-pill badge-secondary">{{ post['comments_count'] }}</span></td>
                <td><span class="badge badge-pill badge-secondary">{{ post['likes_count'] }}</span></td>
                <td>
                {% if post['top']==1 %}
         <a href="" class="btn btn-sm">
                        مهم
                    </a>
    
    {% endif %}

                    <a href="editnews/{{ str_slug(post['title'],"-") }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="destroynews/{{ str_slug(post['title'],"-") }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>

                   
                </td>
            </tr>
        {% endfor %}
    </tbody>
    {{ news.links|raw }}

</table>




        
        
           


    </div>
          

{% endblock %}
